{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-write",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-read",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "**" }]
    }
  ]
}
